{{define "title"}}Home{{end}}
{{define "main"}}
    <h2>Latest Snippets</h2>
        {{if .Snippets}}
            <table>
                <tr>
                    <th>Title</th>
                    <th>Created</th>
                    <th>ID</th>
                </tr>
                {{range .Snippets}}
                    <tr>
                        <td>
                            <a href="/snippet/view?id={{.ID}}">{{.Title.Value}}</a>
                        </td>
                        <td>{{.Created.Format "02 Jan 06 15:04 -0700"}}</td>
                        <td>#{{.ID}}</td>
                    </tr>
                {{end}}
            </table>
        {{else}}
            <p>There is nothing to see here...yet</p>
        {{end}}
{{end}}

